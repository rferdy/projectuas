<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.order.OrderFragment" >

    <ImageView
        android:layout_marginTop="100dp"
        android:id="@+id/ivlogo"
        android:src="@drawable/ic_empty_order"
        android:layout_width="200dp"
        android:layout_height="201dp"
        />

    <TextView
        android:layout_marginTop="36dp"
        android:text="Ouch! Empty"
        style="@style/TextView.PoppinsNormal20sp020202"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginTop="6dp"
        android:text="Seem like you have not\n ordered any items yet"
        style="@style/TextView.PoppinsNormal14sp8D92A3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        />

    <Button
        android:layout_marginTop="36dp"
        style="@style/Button.Primary"
        android:text="Find Craft"
        android:textAllCaps="false"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />
</LinearLayout>